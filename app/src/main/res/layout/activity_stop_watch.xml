<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.michaeliverson.animalhouse.StopWatch">

    <fragment
        android:id="@+id/fgTimerDisplay"
        android:name="com.example.michaeliverson.animalhouse.TimerDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:layout="@layout/fragment_timer_display" />

    <fragment
        android:id="@+id/fgStopWatch"
        android:name="com.example.michaeliverson.animalhouse.StopStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:layout="@layout/fragment_stop_start" />

</LinearLayout>
